{
  "name": "miro-diagramming",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "description": "Miro diagramming plugin template",
  "keywords": [
    "Mirotone",
    "React",
    "TypeScript",
    "Miro Web SDK",
    "Vite"
  ],
  "license": "Unlicense",
  "engines": {
    "node": "^24"
  },
  "scripts": {
    "start": "vite",
    "build": "vite build",
    "serve": "vite preview",
    "prettier": "prettier '**/*.{js,jsx,ts,tsx,md,json,yml,yaml,html}' --write",
    "prettier:check": "prettier '**/*.{js,jsx,ts,tsx,md,json,yml,yaml,html}' --check",
    "typecheck": "tsc --noEmit",
    "test": "vitest run --coverage",
    "lint": "eslint 'src/**/*.{ts,tsx}' 'tests/**/*.{ts,tsx}'",
    "stylelint": "stylelint 'src/**/*.css'",
    "build-storybook": "echo 'Storybook build placeholder'",
    "semantic-release": "semantic-release",
    "commitlint": "commitlint --color"
  },
  "dependencies": {
    "d3-dsv": "^3.0.1",
    "elkjs": "^0.8.2",
    "mirotone": "^2.0.9",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-dropzone": "^14.3.8",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@mirohq/websdk-types": "^2.16.1",
    "@testing-library/dom": "^9.3.4",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^14.3.1",
    "@types/d3-dsv": "^3.0.7",
    "@types/jest": "^29.5.14",
    "@types/node": "^20.19.2",
    "@types/react": "^18.3.23",
    "@types/react-dom": "^18.3.7",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "typescript-eslint": "^7.18.0",
    "@vitejs/plugin-react": "^4.6.0",
    "@vitest/coverage-v8": "^3.2.4",
    "eslint": "^8.57.1",
    "eslint-plugin-react": "^7.37.5",
    "jsdom": "^24.1.3",
    "prettier": "^3.6.2",
    "semantic-release": "^24.2.5",
    "stylelint": "^16.21.0",
    "stylelint-config-standard": "^38.0.0",
    "typescript": "^5.8.3",
    "vite": "^7.0.0",
    "vitest": "^3.2.4"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  }
}
